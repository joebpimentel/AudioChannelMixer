        <DataTemplate x:Key="CompositeVolumeLevelDataTemplate" DataType="{x:Type viewModel:CompositeVolumeLevelViewModel}">
            <view:CompositeVolumeLevelView />
        </DataTemplate>
    </UserControl.Resources>
    <!-- xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
