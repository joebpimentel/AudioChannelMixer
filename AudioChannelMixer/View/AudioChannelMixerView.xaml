        </i:EventTrigger>
    </i:Interaction.Triggers>-->
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" 
                    DockPanel.Dock="Top" 
                    Height="100" />
        <Grid DockPanel.Dock="Bottom" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="100*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto" 
                      Width="Auto"
                      Height="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--<view:CompositeVolumeLevelView DataContext="{Binding CompositeSourceVolumeLevel}"/>-->
                <ListView Grid.Column="0"
                      ItemsSource="{Binding AudioSources, UpdateSourceTrigger=PropertyChanged}" 
                      ItemTemplate="{StaticResource CompositeVolumeLevelDataTemplate}"/>
            </Grid>
            <StackPanel Grid.Row="1" />
        </Grid>
    </DockPanel>
</UserControl>
