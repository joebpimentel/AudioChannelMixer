<UserControl x:Class="AudioChannelMixer.View.AudioChannelMixerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:view="clr-namespace:AudioChannelMixer.View"
        xmlns:viewModel="clr-namespace:AudioChannelMixer.ViewModel"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d" 
        d:DataContext="{d:DesignInstance viewModel:AudioChannelMixerViewModel}"
        Width="800">
    <UserControl.Resources>
        <!--<DataTemplate x:Key="ButtonsTemplate">
            <Border BorderThickness="3"
                    BorderBrush="Blue">
                <StackPanel DataContext="{Binding .}" >
                    <TextBlock Text="{Binding Name}" />
                </StackPanel>
            </Border>
        </DataTemplate>-->
        <!--mvvm:ViewModelLocator.AutoWireViewModel="True"-->
        <!--<ContentControl x:Key="DataBinding" Content="{Binding viewModel:AudioChannelMixerViewModel}" />-->
        <DataTemplate x:Key="CompositeVolumeLevelDataTemplate">
            <view:CompositeVolumeLevelView />
        </DataTemplate>
    </UserControl.Resources>
    <!-- xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
         xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" -->
    <!--<UserControl.InputBindings>
        <KeyBinding Key="D"
                    Modifiers="Control"
                    Command="{Binding DeleteCommand}" />
    </UserControl.InputBindings>-->
    <!--<i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <ei:CallMethodAction TargetObject="{Binding}" MethodName="LoadCustomers" />
        </i:EventTrigger>
    </i:Interaction.Triggers>-->
    <DockPanel LastChildFill="True">
        <view:InputPanelView DockPanel.Dock="Top"/>
        <Grid DockPanel.Dock="Bottom" Height="Auto">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="300" />
                <RowDefinition MinHeight="100" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" 
                  ScrollViewer.VerticalScrollBarVisibility="Auto" 
                  MinWidth="300"
                  MinHeight="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="300" Width="Auto"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!--<view:CompositeVolumeLevelView DataContext="{Binding CompositeSourceVolumeLevel}"/>-->
                <ListView Grid.Column="0"
                      ItemsSource="{Binding AudioSources, UpdateSourceTrigger=PropertyChanged}" 
                      ItemTemplate="{StaticResource CompositeVolumeLevelDataTemplate}" Panel.ZIndex="-3"/>
                <view:MixerInputsView Grid.Column="1" DataContext="{Binding MixerVolumes}" />
            </Grid>
            <StackPanel Grid.Row="1" />
        </Grid>
    </DockPanel>
</UserControl>
