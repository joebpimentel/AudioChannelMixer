               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="1">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Style.Triggers>
                        <DataTrigger Value="Mute" Binding="{Binding VolumeLevel, Converter={StaticResource VolumeConverter}}">
                            <Setter Property="Source" Value="{StaticResource Volume_0}"/>
                        </DataTrigger>
                        <DataTrigger Value="Low" Binding="{Binding VolumeLevel, Converter={StaticResource VolumeConverter}}">
                            <Setter Property="Source" Value="{StaticResource Volume_1-32}"/>
                        </DataTrigger>
                        <DataTrigger Value="Medium" Binding="{Binding VolumeLevel, Converter={StaticResource VolumeConverter}}">
                            <Setter Property="Source" Value="{StaticResource Volume_33-64}"/>
                        </DataTrigger>
                        <DataTrigger Value="High" Binding="{Binding VolumeLevel, Converter={StaticResource VolumeConverter}}">
                            <Setter Property="Source" Value="{StaticResource Volume_65-99}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Slider Grid.Column="3"
                Value="{Binding VolumeLevel, Mode=TwoWay}"
                Maximum="100" 
                Width="Auto"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Center" 
                Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Grid.RowSpan="2" SmallChange="33" AutoToolTipPlacement="TopLeft" TickFrequency="33" TickPlacement="BottomRight" />
        <Label Grid.Column="4" 
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="{Binding VolumeLevel}" />
