    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding PaddingWidth}"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
